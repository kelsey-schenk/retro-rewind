<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>

        <div class="field has-addons">
            <div class="control is-expanded">
                <div class="select is-fullwidth">
                    <select name="rating">
                        <option value="1 Star">1 Star</option>
                        <option value="2 Star">2 Star</option>
                        <option value="3 Star">3 Star</option>
                        <option value="4 Star">4 Star</option>
                        <option value="5 Star">5 Star</option>
                    </select>
                </div>
            </div>

            <div class="control">
                <button type="submit" class="button is-primary">Choose</button>
            </div>
        </div>

        <form class="user-form signup-form">
            <div class="field">
                <p class="control has-icons-left has-icons-right">
                    <input class="input" id="username-signup" type="text" placeholder="Review Title">
                    <span class="icon is-small is-left">
                        <i class="far fa-edit"></i>
                    </span>
                </p>

            </div>

            <div class="field">
                <p class="control has-icons-left has-icons-right">
                    <input class="input" id="email-signup" type="email" placeholder="Description">
                    <span class="icon is-small is-left">
                        <i class="far fa-file-alt"></i>
                    </span>
                </p>

            </div>

            <div class="buttons">
                <button class="button is-primary" type="submit">Submit Review</button>
            </div>
        </form>
    </div>

</div>

